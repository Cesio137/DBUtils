{
    "compilerOptions": {
      // "noEmit": true,
      "module": "NodeNext",
      "target": "ESNext",
      "moduleResolution": "NodeNext",
      "resolveJsonModule": true,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,

      "rootDir": "src",
      "outDir": "build",
      "emitDeclarationOnly": false,

      "noUnusedLocals": true,
      "noUnusedParameters": true,

      "baseUrl": "./src",
      "paths": {
        "#env": ["./env.ts"],
        "#helpers": ["./helpers/index.ts"],
        "#utils": ["./utils/index.ts"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules", "deprecated", "dist", "build"],
  }